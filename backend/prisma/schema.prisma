generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model USER {
  web_mail      String         @id @db.VarChar(100)
  name          String         @db.VarChar(100)
  gender        String         @db.Char(4)
  smoke         Int            @db.TinyInt
  MATCHING_INFO MATCHING_INFO?
  REVIEW        REVIEW?
}

model MATCHING_INFO {
  USER_web_mail String  @id @db.VarChar(100)
  from          Decimal @db.Decimal(18, 10)
  to            Decimal @db.Decimal(18, 10)
  is_driver     Int     @db.TinyInt
  USER          USER    @relation(fields: [USER_web_mail], references: [web_mail], onDelete: NoAction, onUpdate: NoAction, map: "fk_MATCHING_INFO_USER")
}

model MATCHING_SUCCESS {
  matching_no        Int
  driver_web_mail    String @db.VarChar(100)
  passenger_web_mail String @db.VarChar(100)

  @@id([matching_no, driver_web_mail, passenger_web_mail])
}

model REVIEW {
  USER_web_mail String  @id @db.VarChar(100)
  review_score  Float?  @db.Float
  received      String? @db.VarChar(100)
  wrote         String? @db.VarChar(100)
  USER          USER    @relation(fields: [USER_web_mail], references: [web_mail], onDelete: NoAction, onUpdate: NoAction, map: "fk_REVIEW_USER1")
}
